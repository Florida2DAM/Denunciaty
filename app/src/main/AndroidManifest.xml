<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.denunciaty.denunciaty" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Splash"
            android:label="@string/title_activity_splash"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".MisReportesActivity"
            android:theme="@style/NoaActionBarTheme" />
        <activity
            android:name=".RegistroActivity"
            android:label="@string/app_name"
            android:theme="@style/NoaActionBarTheme" />
        <activity
            android:name=".AddReporteActivity"
            android:label="@string/title_activity_add_reporte"
            android:theme="@style/NoaActionBarTheme" />
        <activity
            android:name=".RegistroAppActivity"
            android:label="@string/app_name"
            android:theme="@style/NoaActionBarTheme" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="2b811bcaca5f56c4dd163071818596afca25eab8" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".PrincipalActivity"
            android:label="@string/app_name"
            android:theme="@style/NoaActionBarTheme" >
        </activity>
        <activity
            android:name=".ReporteActivity"
            android:label="Reporte"
            android:theme="@style/AppCompatTheme" >
        </activity>
        <activity
            android:name=".MiPerfil"
            android:label="@string/title_activity_mi_perfil"
            android:theme="@style/AppCompatTheme">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:theme="@style/AppCompatTheme"
            android:label="Settings" >
        </activity>
    </application>

</manifest>
