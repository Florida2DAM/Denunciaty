<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.denunciaty.denunciaty.AccesoActivity"
    android:background="@mipmap/fondo_inicio">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/correo"
        android:background="#4F65AE"
        android:autoText="false"
        android:textColor="#ffffff"
        android:layout_above="@+id/iniciar"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:hint="Correo Electrónico"
        android:password="false"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pass"
        android:layout_alignTop="@+id/correo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_alignParentEnd="true"
        android:background="#4F65AE"
        android:textColor="#ffffff"
        android:password="true"
        android:hint="Contraseña"
        android:textSize="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:id="@+id/iniciar"
        android:nestedScrollingEnabled="false"
        android:background="#6071C2"
        android:layout_above="@+id/registrate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regístrate"
        android:id="@+id/registrate"
        android:background="#4f4f4f"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/iniciar"
        android:layout_alignStart="@+id/iniciar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bienvenido a Denunciaty"
        android:id="@+id/textView2"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="La app valenciana donde podrás \ndenunciar cualquier desperfecto o \nincidente presente en tu ubicación."
        android:id="@+id/textView3"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
