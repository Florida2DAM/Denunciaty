<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.denunciaty.denunciaty.MiPerfil"
    android:background="#842525ff">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_avatar"
        android:layout_width="205dp"
        android:layout_height="188dp"
        android:src="@mipmap/avatar"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/et_usuario" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib_edit"
        android:src="@mipmap/icono_lapiz_blanco"
        android:layout_alignParentBottom="true"
        android:background="#00ffffff" />

    <EditText
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_usuario"
        android:hint="Usuario"
        android:layout_above="@+id/et_nombre"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:background="#00ffffff"
        android:enabled="false"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_nombre"
        android:hint="Nombre"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/bt_guardar"
        android:enabled="false"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_apellidos"
        android:layout_alignParentStart="true"
        android:hint="Apellidos"
        android:layout_below="@+id/et_nombre"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/bt_guardar"
        android:layout_alignEnd="@+id/et_localidad"
        android:enabled="false"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_email"
        android:hint="Correo Electrónico"
        android:layout_below="@+id/et_localidad"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/et_localidad"
        android:enabled="false"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_localidad"
        android:hint="Localidad"
        android:layout_below="@+id/et_apellidos"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/iv_avatar"
        android:enabled="false"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:id="@+id/bt_guardar"
        android:layout_alignBottom="@+id/ib_edit"
        android:layout_alignParentEnd="true"
        android:background="#00ffffff"
        android:layout_alignTop="@+id/ib_edit"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar contraseña"
        android:id="@+id/bt_cambia_password"
        android:layout_below="@+id/et_email"
        android:layout_alignParentStart="true"
        android:background="#00ffffff"
        android:layout_alignEnd="@+id/et_email"
        android:visibility="invisible" />

</RelativeLayout>

    <!-- android:layout_marginTop="?android:attr/actionBarSize"-->
    <com.denunciaty.denunciaty.ScrimInsetsFrameLayout
        android:id="@+id/scrimInsetsFrameLayout"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:elevation="10dp"
        android:fitsSystemWindows="true"
        app:insetForeground="#4000">

        <fragment
            android:id="@+id/fragment_drawer"
            class="com.denunciaty.denunciaty.NavigationDrawerFragment"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout="@layout/fragment_navigation_drawer"
            cardview:layout="@layout/fragment_navigation_drawer" />
    </com.denunciaty.denunciaty.ScrimInsetsFrameLayout>


</android.support.v4.widget.DrawerLayout>